@model CoreMVC1.Models.Employee
<form asp-action="Login_click" class="form-horizondal" method="post">
    <div class="form-group">
        <label class="control-label">
            Employee id
        </label>
        <input type="text" asp-for="Id" class="form-control" id="t1" />
    </div>
    <div class="form-group">
        <label class="control-label">
            Employee Name
        </label>
        <input type="text" asp-for="Name" class="form-control" id="t2" />
    </div>
    
    <div class="form-group mt-2">
        <input type="submit" class="btn btn-success" value="Insert" />
    </div>
    <div>
        @Html.ActionLink("Go to Sign Up", "Insert_Load", "DBInsert")
    </div>
</form>
@{
    if (@TempData["msg"] != null)
    {
        <script>
            alert('@TempData["msg"]');
            document.getElementById("t1").value="";
            document.getElementById("t2").value="";
        </script>
    }
}