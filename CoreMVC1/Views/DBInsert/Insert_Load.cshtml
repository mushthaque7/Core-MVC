@model CoreMVC1.Models.Employee
<form asp-action="Insert_click" class="form-horizondal" method="post">
    <div class="form-group">
        <label class="control-label">
            Employee Name
        </label>
        <input type="text" asp-for="Name" class="form-control" id="t1" />
    </div>
    <div class="form-group">
        <label class="control-label">
            Employee Address
        </label>
        <input type="text" asp-for="Address" class="form-control" id="t2" />
    </div>
    <div class="form-group">
        <label class="control-label">
            Employee Salary
        </label>
        <input type="text" asp-for="Salary" class="form-control" id="t3" />
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-success" value="Insert" />
    </div>
    <div>
        @Html.ActionLink("Go to Login","Login_Load","DBLogin")
    </div>
</form>
@{
    if (@TempData["msg"] != null)
    {
        <script>
        alert('@TempData["msg"]');
        document.getElementById("t1").value="";
        document.getElementById("t2").value="";
        document.getElementById("t3").value="";
        </script>
    }
}